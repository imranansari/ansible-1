# {{ ansible_managed }}
# prometheus configuration, Matt Layher, 2016-04-15

global:
  scrape_interval:     15s
  evaluation_interval: 15s

rule_files:
  - alerts.rules

scrape_configs:
{% for job in prometheus_jobs %}
  - job_name: "{{ job.job }}"
  {% if job.scrape_interval is defined %}
  scrape_interval: "{{ job.scrape_interval }}"
  {% endif %}
  static_configs:
    - targets: {{ job.targets | to_yaml }}
{% endfor %}
